<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainLecture"
    >

    <!-- TODO: Update blank fragment layout -->


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"

        >

        <View
            android:id="@+id/lecture_rectangle"
            android:layout_width="270dp"
            android:layout_height="339dp"
            android:background="@drawable/main_rectangle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"


            app:layout_constraintVertical_bias="0.127" />

        <TextView
            android:id="@+id/lecture_title"
            android:layout_width="230dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="Hello blank fragment"
            android:textColor="#0A0A0A"
            android:textSize="21sp"
            app:layout_constraintEnd_toEndOf="@+id/lecture_rectangle"
            app:layout_constraintHorizontal_bias="0.475"
            app:layout_constraintStart_toStartOf="@+id/lecture_rectangle"
            app:layout_constraintTop_toTopOf="@+id/lecture_rectangle" />

        <TextView
            android:id="@+id/lecture_period"
            android:layout_width="230dp"
            android:layout_height="21dp"
            android:layout_marginTop="12dp"
            android:text="TextView"
            android:ellipsize="end"
            android:textColor="#0A0A0A"
            app:layout_constraintEnd_toEndOf="@+id/lecture_rectangle"
            app:layout_constraintHorizontal_bias="0.475"
            app:layout_constraintStart_toStartOf="@+id/lecture_rectangle"
            app:layout_constraintTop_toBottomOf="@+id/lecture_location" />

        <TextView
            android:id="@+id/lecture_day_time"
            android:layout_width="230dp"
            android:layout_height="21dp"
            android:layout_marginTop="12dp"
            android:text="TextView"
            android:textColor="#0A0A0A"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="@+id/lecture_rectangle"
            app:layout_constraintHorizontal_bias="0.475"
            app:layout_constraintStart_toStartOf="@+id/lecture_rectangle"
            app:layout_constraintTop_toBottomOf="@+id/lecture_period" />

        <TextView
            android:id="@+id/lecture_price"
            android:layout_width="230dp"
            android:layout_height="21dp"
            android:layout_marginTop="12dp"
            android:text="TextView"
            android:textColor="#0A0A0A"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="@+id/lecture_rectangle"
            app:layout_constraintHorizontal_bias="0.475"
            app:layout_constraintStart_toStartOf="@+id/lecture_rectangle"
            app:layout_constraintTop_toBottomOf="@+id/lecture_day_time" />

        <TextView
            android:id="@+id/lecture_method"
            android:layout_width="230dp"
            android:layout_height="21dp"
            android:layout_marginTop="12dp"
            android:text="TextView"
            android:textColor="#0A0A0A"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="@+id/lecture_rectangle"
            app:layout_constraintHorizontal_bias="0.475"
            app:layout_constraintStart_toStartOf="@+id/lecture_rectangle"
            app:layout_constraintTop_toBottomOf="@+id/lecture_price" />

        <TextView
            android:id="@+id/lecture_location"
            android:layout_width="230dp"
            android:layout_height="21dp"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:text="TextView"
            android:textColor="#0A0A0A"
            app:layout_constraintEnd_toEndOf="@+id/lecture_rectangle"
            app:layout_constraintHorizontal_bias="0.475"
            app:layout_constraintStart_toStartOf="@+id/lecture_rectangle"
            app:layout_constraintTop_toBottomOf="@+id/lecture_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>